@model NoteModel

@{
    ViewData["Title"] = "Add Note";
}

<form asp-area="" asp-controller="Note" asp-action="AddNote" method="post">
    <input asp-for="@Model.Title" placeholder="Enter Title" required />
    <textarea asp-for="@Model.Description" placeholder="Enter Description"></textarea>
    @Html.DropDownListFor(x => x.Priority, Html.GetEnumSelectList<Priority>())
    <input type="submit" value="Add" />
</form>

